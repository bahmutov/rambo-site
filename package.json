{
  "name": "rambo-site",
  "description": "Site where Rambo finds Ramda solutions to your problems",
  "version": "0.0.0-semantic-release",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/rambo-site/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run deps",
        "npm test",
        "npm run build",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "files": [
    "index.js",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/rambo-site#readme",
  "keywords": [
    "fp",
    "functional",
    "javascript",
    "rambo",
    "ramda",
    "site",
    "solution",
    "solver",
    "web"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/rambo-site.git"
  },
  "scripts": {
    "ban": "ban",
    "build": "webpack",
    "deps": "deps-ok",
    "format": "standard-format -w index.js src/*.js",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose index.js src/*.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.8.2",
    "deps-ok": "1.1.0",
    "git-issues": "1.2.0",
    "license-checker": "5.1.2",
    "mocha": "2.4.5",
    "nsp": "2.4.0",
    "pre-git": "3.8.3",
    "semantic-release": "^4.3.5",
    "standard": "7.0.1",
    "standard-format": "2.1.1",
    "webpack": "1.13.0"
  },
  "dependencies": {
    "rambo": "1.4.0"
  }
}
